import qrcode
#  Bank Account Management System
def CreateAccount():
    holderName=input("Enter the Name")
    AccountNumber=input("Enter the Account Number")
    if(not AccountNumber.isdigit()):
         print("‚ùå Please enter a valid account number (digits only).")
    if(len(AccountNumber)!=12):
        print("‚ùå Please enter a valid account number should be 12 digit.")
    else:
        MobileNumber=input("Enter the Mobile Number ")
        if(not MobileNumber.isdigit()):
            print("‚ùå Please enter a valid account number (digits only).")
        else:
            IFScode=input("Enter the IFScode")
            HolderDetails={"Holder-Name":holderName,"Account-Number":AccountNumber,"Mobile-Number":MobileNumber,"IFS-code":IFScode}
            print(HolderDetails)   
            
def BankAccount():
    def Deposit__withdrawal_Currentbalance():
        Money=0
        while True:
            print("\nüíº Bank Operations")
            print("1Ô∏è‚É£  Deposit")
            print("2Ô∏è‚É£  withdrawal")
            print("3Ô∏è‚É£  Check Balance")
            print("4Ô∏è‚É£  Exit")
            choice = input("Enter your choice: ")
            if(choice=="1"):
                try:
                    amount=int(input("Enter the amount for Deposit"))
                    if(amount>0):
                        Money+=amount
                        print(f"‚úÖ ‚Çπ{amount} deposited successfully. Total Balance: ‚Çπ{Money}")
                    else:
                        print("‚ùå Invalid choice. Please select a valid option.")
                except ValueError:
                    print("‚ùå Invalid input. Please enter a number.")
            elif(choice == "2"):
                try:
                    amount=int(input("Enter the withdrawal money"))
                    if(amount>0):
                        Money-=amount
                        print(f"‚úÖ ‚Çπ{amount} withdrawal successfully. Total Balance: ‚Çπ{Money}")
                    else:
                         print("‚ùå Invalid choice. Please select a valid option.")
                except ValueError:
                    print("‚ùå Invalid input. Please enter a number.")
            elif(choice=="3"):
                print(f"üí∞ Current Balance: ‚Çπ{Money}")
            elif(choice=="4"):
                 print("üëã Exiting. Thank you!")
                 qrcodeprice=qrcode.make(Money)
                 qrcodeprice.show(qrcodeprice)
                 break
            else:
                print("‚ùå Invalid choice. Please select a valid option.")
            
    Deposit__withdrawal_Currentbalance()


CreateAccount()
BankAccount()
            

        
